<div class = "row">
  <div class = "col-sm-1"> </div>
  <div class = "col-sm-4">
    <div class = "row">
      <ul class="list-group">
        <li class="list-group-item text-right">
          <span class="pull-left"><strong>search information</strong></span>
          <p>
           <%= form_tag :action => 'search'  do %>
           <%= text_field_tag :search, params[:search], placeholder: "Search dataset" %>
           <%= submit_tag "search", :name => nil, class: "btn btn-success center-block" %>
          <% end %>
          </p>
      </ul>
    </div>
  </div>
</div>
          

<div class = "row">
      <div class = "col-sm-0"> </div>
      <div class = "col-sm-8">
        <strong>Dataset Selection</strong>
         <div class = "row">
           <div class = "col-sm-12">
             <div class="table-responsive">
               <table class = "table">
                 <thead>
            <tr>
              <th class = "col-md-3">Accession</th>
              <th class = "col-md-3">Name</th>
            </tr>
          </thead>
            </tr>
          </thead>
        </table>
      </div>
  </div>
</div>
      </div>
</div>

<div style="border:1px solid black; width:700px;height:200px; overflow-y:auto;">
    <div>
        <div style="border:1px solid white; width:700px; height:200px; float:left;">
         <div class = "row">
  <div class = "col-sm-10">
      <div class="table-responsive">
        <table class = "table">
          <tbody>

      <% if @dataset %>            
        <% @dataset.each do |k,v| %>            
      <tr>
        <td> <%= k %> </td>
        <td> <%= v %> </td>
        <td><%= link_to 'Delete', {:controller => "addquestions", :action => "delete_dataset", :key => k } ,:onclick => "return confirm('Are you sure you want to delete this dataset?')" %></td>
      </tr>
        <%end %> 
      <% end %>

          </tbody>
        </table>
      </div>
  </div>
</div>
        </div>
      <div style="clear:both"></div>
    </div>
</div>


<div class = "row">
      <div class = "col-sm-0"> </div>
      <div class = "col-sm-2">
        <%= button_to "Confirm", action="confirm_search", class: "btn btn-primary center-block" %>
      </div>
</div>
