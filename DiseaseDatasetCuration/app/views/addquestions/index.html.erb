<div class = "row">
  <h2>Questions</h2>
</div>
<div>
<table class = "table">
  <thead>
  <% if @addquestions.length!=0 %>
    <% @addquestions.each do |q| %>
            <tr>
              <th class = "col-md-3"><%= q[0] %></th>
                <% if q[1]==1%>
                   <th class = "col-md-3"> YES </th>
                <% elsif q[1]==-1 %>
                    <th class = "col-md-3"> NO </th>
                <% else %>
                    <th class = "col-md-3"> No standard answer </th>
                <% end %>
              <th class = "col-md-3"><%= button_to 'Delete', {:controller => "addquestions", :action => "destroy", :key => q[0] } ,:onclick => "return confirm('Are you sure you want to delete this question?')", class: "btn btn-warning center-block" %></th>
            </tr>
    <% end %> 
    </thead>
    </table>
  <% else %>
     </thead>
    </table>
    <h3>There's no questions yet!</h3>
    <h3>Click <%= link_to "Here", new_addquestion_path %> to create a question</h3>
  <% end %>
</div>

<div class = "row">
  <div class = "col-sm-12">
    <p><%= link_to "Create a new Question...", new_addquestion_path%></p>  
    <p><%= link_to "Back...", '/admin'%></p>
  </div>
</div>

<div class = "row">
      <div class = "col-sm-0"> </div>
      <div class = "col-sm-8">
        <strong>Group Selection</strong>
         <div class = "row">
           <div class = "col-sm-12">
             <div class="table-responsive">
               <table class = "table">
                 <thead>
            <tr>
              <th class = "col-md-3">Name</th>
            </tr>
          </thead>
            </tr>
          </thead>
        </table>
      </div>
  </div>
</div>
      </div>
</div>

<div style="border:1px solid black; width:700px;height:200px; overflow-y:auto;">
    <div>
        <div style="border:1px solid white; width:700px; height:200px; float:left;">
         <div class = "row">
  <div class = "col-sm-10">
      <div class="table-responsive">
  <div style="margin:0 auto;">
        <table class = "table">
          <tbody>
      <% if !@all_groups.nil? %>
        <% @all_groups.each do |grp| %>
        <tr>
         <td> <%= grp %> </td>
         <td> <%= link_to 'Delete', {:controller => "addquestions", :action => "delete_group", :key=>grp} ,:onclick => "return confirm('Are you sure you want to delete this group?')" %></td>
        </tr>
        <%end %>
      <%end %>

          </tbody>
        </table>
        </div>
      </div>
  </div>
</div>
        </div>
      <div style="clear:both"></div>
    </div>
</div>

<div class = "row">
      <div class = "col-sm-0"> </div>
      <div class = "col-sm-2">
        <%= button_to "Submit", {:controller => "addquestions", :action => "submit_result"}, class: "btn btn-primary center-block" %>
      </div>
</div>
