<div class = "row">
  <h2>Questions</h2>
</div>
<div>
  <% if !@all_addquestions.nil? %>
    <% @all_addquestions.each do |grp| %>
      <%= render grp %>
      <% if !grp.get_users.nil? %>
        <div class = "row">
          <div class = "col-sm-12">
            <div class="table-responsive">
              <table class = "table-bordered">
                <thead>
                  <tr>
                    
                  </tr>
                </thead>
                <tbody>
                  <%= render grp.get_users %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class = "col-sm-6">
        </div>
        <div class = "col-sm-2">
          <%= link_to addquestion_path(grp),
          method: :delete, data: { confirm: "Are you sure?" },
          :class => "btn btn-primary btn-block" do %>
          <i class="glyphicon glyphicon-trash"></i> Delete Question
          <% end %>
        </div>
      </div>
      <hr>
    <% end %>    
  <% else %>
    <h3>There's no questions yet!</h3>
    <h3>Click <%= link_to "Here", '/addquestion_create_path'%> to create a question</h3>
  <% end %>
</div>

<div class = "row">
  <div class = "col-sm-12">
    <p><%= link_to "Create a new Question...", new_addquestion_path%></p>  
    <p><%= link_to "Back...", '/admin'%></p>
  </div>
</div>

<div class = "row">
      <div class = "col-sm-0"> </div>
      <div class = "col-sm-8">
        <strong>Group Selection</strong>
         <div class = "row">
           <div class = "col-sm-12">
             <div class="table-responsive">
               <table class = "table">
                 <thead>
            <tr>
              <th class = "col-md-3">Accession</th>
              <th class = "col-md-3">Name</th>
            </tr>
          </thead>
            </tr>
          </thead>
        </table>
      </div>
  </div>
</div>
      </div>
</div>

<div style="border:1px solid black; width:700px;height:200px; overflow-y:auto;">
    <div>
        <div style="border:1px solid white; width:700px; height:200px; float:left;">
         <div class = "row">
  <div class = "col-sm-10">
      <div class="table-responsive">
        <table class = "table">
          <tbody>

      <% if !@all_groups.nil? %>
        <% @all_groups.each do |grp| %>
          <%= grp %>
              <%= link_to 'Delete', {:controller => "addquestions", :action => "delete_group", :key=>grp} ,:onclick => "return confirm('Are you sure you want to delete this group?')" %>
            <br />
        <%end %>
      <%end %>
  
          </tbody>
        </table>
      </div>
  </div>
</div>
        </div>
      <div style="clear:both"></div>
    </div>
</div>


<div class = "row">
      <div class = "col-sm-0"> </div>
      <div class = "col-sm-2">
        <%= button_to "Submit", action="submit_search", class: "btn btn-primary center-block" %>
      </div>
</div>
